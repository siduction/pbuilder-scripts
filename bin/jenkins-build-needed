#!/bin/bash
PATH=/usr/local/bin:/usr/bin:/bin:/usr/local/games:/usr/games

TARGETS="siduction debian"
REPOSITORIES="base extra fixes lxqt"
DISTRIBUTIONS="jessie-backports unstable next experimental"
ARCHS="amd64 i386 all"


## version
version() {
    . /usr/share/pbuilder-scripts/version
    echo "$(basename $0): ${VERSION}"
}

## get basic configuration form /etc/jenkins
if [ -f /etc/jenkins/jenkins-buildpackage.conf ]; then
#    echo -e "Configuration: /etc/jenkins/jenkins-buildpackage.conf used"
    . /etc/jenkins/jenkins-buildpackage.conf
fi

## get user conf
if [ -f ${HOME}/.config/jenkins/jenkins-buildpackage.conf ]; then
#    echo -e "Configuration: ${HOME}/.config/jenkins-buildpackage.conf  used"
    . ${HOME}/.config/jenkins/jenkins-builpackage.conf
fi


## is_valid_line
is_valid_line() {
    [[ ! -e ${SOURCEPATH}/build-failed-${REPOSITORY}-${DISTRI}-${BUILDARCH} ]] && touch ${SOURCEPATH}/build-failed-${REPOSITORY}-${DISTRI}-${BUILDARCH}
    grep "$REPOLINE" ${SOURCEPATH}/build-failed-${REPOSITORY}-${DISTRI}-${BUILDARCH} &>/dev/null
    RESULT=$?
    case ${RESULT} in
        1)
             if [ ! -f ${SOURCEPATH}/needed-${REPOSITORY}-${DISTRI}-${BUILDARCH} ]; then
                 echo ${REPOLINE} > ${SOURCEPATH}/needed-${REPOSITORY}-${DISTRI}-${BUILDARCH}
                 echo "${REPOLINE} > ${SOURCEPATH}/needed-${REPOSITORY}-${DISTRI}-${BUILDARCH}"
             fi
             ;;
        *)
             echo "ERROR: $REPOLINE : RESULT $RESULT : ARCH $BUILDARCH"
             ;;
    esac
    return ${RESULT}
}


## Main
[ ! -d ${SOURCEPATH} ] && mkdir -p ${SOURCEPATH} && echo ${SOURCEPATH}

for i in ${REPOSITORIES}; do
    case ${i} in
        lxqt)
            TARGET=debian
            ;;
        *)
            TARGET=siduction
            ;;
    esac
    for k in ${DISTRIBUTIONS}; do
        for l in ${ARCHS}; do
            REPOBASE="${REPOPATH}/${i}"
            IFS=$'\n'
            for m in $(ssh ${USER}@${HOST}  "cd ${REPOBASE}; reprepro build-needing ${k}  ${l}"); do
                REPOLINE=$m
                REPOSITORY=${i}
                DISTRI=${k}
                BUILDARCH=${l}
                is_valid_line
            done
            unset IFS
        done
    done
done
