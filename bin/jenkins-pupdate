#!/bin/bash
PATH=/usr/local/bin:/usr/bin:/bin:/usr/local/games:/usr/games

TARGETS="siduction debian"
DISTRIBUTIONS="jessie-backports unstable next experimental"
ARCHS="amd64 i386 all"

if [ -e /etc/jenkins/jenkins-pupdate.conf ]; then
    . /etc/jenkins/jenkins-pupdate.conf
fi

## version
version() {
    . /usr/share/pbuilder-scripts/version
    echo "$(basename $0): ${VERSION}"
}

for h in ${TARGETS}; do
    for i in ${DISTRIBUTIONS}; do
        for k in ${ARCHS}; do
            echo -e ""
            echo -e "\nUpdate Build-Chroot"
            echo -  "Target:       ${h}"
            echo -e "Distribution: ${i}"
            echo -e "Architecture: ${k} \n "
            pupdate -t ${h} -d ${i} -a ${k}
        done
    done
done
