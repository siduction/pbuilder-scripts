#!/bin/bash
#
# packs
#
# (c) 2011-2013 Alf Gaida <agaida@siduction.org>
#

export REPOSITORY="extra"
export DISTRI="unstable"
export ARCH="amd64"

while getopts “a:d:s:h” OPTION; do
     case ${OPTION} in
         a)
             ARCH=${OPTARG}
             export $ARCH
             ;;
         d)
             DISTRI=${OPTARG}
             export ${DISTRI}
             ;;
         h)
             #usage
             exit
             ;;
     esac
done

. /usr/share/pbuilder-scripts/set_pbuilder


cd ${BUILDRESULT}
echo -e "\033[1m\033[33mpbuilder-results: Leave with exit"
echo -e "$(pwd)\033[0m"; 
echo
ls -ap --color=always;
echo
export PS1='\[\033[1;33m\]\u@\h:\W \$\[\033[0m\] ' 
bash --posix

