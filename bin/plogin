#!/bin/bash
#
# plogin
#
# © 2011-2014 Alf Gaida <agaida@siduction.org>
#

export DISTRIBUTION="unstable"
export ARCH="amd64"

while getopts “d:a:sh” OPTION; do
     case ${OPTION} in
         d)
             DISTRIBUTION=${OPTARG}
             export DISTRIBUTION
         a)
             ARCH=${OPTARG}
             export ARCH
             ;;
         s)
             SAVESETTINGS='--save-settings'
             ;;
         h)
             #usage
             exit
             ;;
     esac
done

case ${ARCH} in 
    i386)
        export debian_chroot="\[\033[1;33m\]pbuild-${DISTRIBUTION}-${ARCH} $$\[\033[0m\]"
        ;;
    amd64)
        export debian_chroot="\[\033[1;33m\]pbuild-${DISTRIBUTION}-${ARCH} $$\[\033[0m\]"
        ;;
esac

. /usr/share/pbuilder-scripts/set_pbuilder

sudo -E pbuilder --login ${@} ${SAVESETTINGS}

