#!/bin/bash
#
# pupdate
#
# © 2011 - 2014 Alf Gaida <agaida@siduction.org>

export DISTRI="unstable"
export ARCH="amd64"


while getopts “d:a:h” OPTION; do
     case ${OPTION} in
         d)
             DISTRI=${OPTARG}
             export DISTRI
             ;;
         a)
             ARCH=${OPTARG}
             export ARCH
             ;;
         h)
             #usage
             exit
             ;;
     esac
done

. /usr/share/pbuilder-scripts/set_pbuilder

sudo -E pbuilder --clean
sudo -E pbuilder --update --override-config ${@}

