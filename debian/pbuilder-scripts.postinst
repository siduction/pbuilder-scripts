#!/bin/sh
# postinst script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        mkdir -p  /var/cache/pbuilder/hooks
	mkdir -p  /var/cache/pbuilder/unstable-amd64/result
        mkdir -p  /var/cache/pbuilder/unstable-i386/result
        mkdir -p  /var/cache/pbuilder/next-amd64/result
        mkdir -p  /var/cache/pbuilder/next-i386/result
        mkdir -p  /var/cache/pbuilder/expetimental-amd64/result
        mkdir -p  /var/cache/pbuilder/experimental-i386/result
        mkdir -p  /var/cache/pbuilder/sid-amd64/result
        mkdir -p  /var/cache/pbuilder/sid-i386/result
        chmod 777 /var/cache/pbuilder/*-*/result
        [ -f /etc/pbuilderrc ] && mv /etc/pbuilderrc /etc/pbuilderrc.old
        ln -sf /etc/pbuilder/pbuilderrc  /etc/pbuilderrc
    ;;
    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
