# Optionally set a default distribution if none is used. Note that you can set
# your own default (i.e. ${DIST:="unstable"}).
: ${DISTRIBUTION:="unstable"}

if [ "${DISTRI}" == "jessie-backports" ]; then
    DISTRIBUTION=jessie
fi

# Optionally set the architecture to the host architecture if none set. Note
# that you can set your own default (i.e. ${ARCH:="i386"}).
: ${ARCH:="$(dpkg --print-architecture)"}

case "${BUILDARCH}" in
  all)
      DEBBUILDOPTS="-j8 -A"
      ARCH=amd64
      ;;
  i386)
      DEBBUILDOPTS="-j8 -B"
      ;;
  amd64)
      DEBBUILDOPTS="-j8 -B"
      ;;
esac


BUILDCHROOT="${TARGET}-${DISTRI}"
if [ -n "${ARCH}" ]; then
    BUILDCHROOT="${TARGET}-${DISTRI}-${ARCH}"
    DEBOOTSTRAPOPTS=("--arch" "$ARCH" "${DEBOOTSTRAPOPTS[@]}")
fi
export BUILDCHROOT
export DISTRIBUTION

# common pbuilder settings
export USEPROC=yes
export USEDEVPTS=yes
export PKGNAME_LOGFILE_EXTENTION=.build
export PKGNAME_LOGFILE=yes
export APTCACHEHARDLINK=no

BASETGZ="/var/cache/pbuilder/$BUILDCHROOT-base.tgz"
export BUILDRESULT="/var/cache/pbuilder/${BUILDCHROOT}/result/"
APTCACHE="/var/cache/pbuilder/aptcache/"
BUILDPLACE="/var/cache/pbuilder/build"
HOOKDIR="/var/cache/pbuilder/hooks"
CCACHEDIR="/var/cache/pbuilder/ccache"
export PATH="/usr/lib/ccache:${PATH}"


EXTRAPACKAGES=" \
    apt-utils \
    ccache \
    debhelper \
    devscripts \
    fakeroot \
    gawk \
    gnupg-agent  \
    less \
    libfile-fcntllock-perl \
    lintian \
    pbuilder-apt-settings \
    siduction-archive-keyring \
"

# to cleanup existing chroots - remove the comment
REMOVEPACKAGES="eatmydata"
# 

# Mirrors to use. Update these to your preferred mirror.
DEBIAN_MIRROR="debian.siduction.org"

# Debian configuration
MIRRORSITE="http://${DEBIAN_MIRROR}/"
COMPONENTS="main contrib non-free"
case ${TARGET} in
  siduction)
    case ${DISTRI} in
        unstable)
            OTHERMIRROR="    deb http://packages.siduction.org/base  unstable     main"
            OTHERMIRROR+=" | deb http://packages.siduction.org/extra unstable     main"
            OTHERMIRROR+=" | deb http://packages.siduction.org/fixes unstable     main contrib non-free"
            OTHERMIRROR+=" | deb http://$DEBIAN_MIRROR/              experimental main contrib non-free"
            ;;
        next)
            OTHERMIRROR="    deb http://packages.siduction.org/base  unstable     main"
            OTHERMIRROR+=" | deb http://packages.siduction.org/base  next         main"
            OTHERMIRROR+=" | deb http://packages.siduction.org/extra unstable     main"
            OTHERMIRROR+=" | deb http://packages.siduction.org/extra next         main"
            OTHERMIRROR+=" | deb http://packages.siduction.org/fixes unstable     main contrib non-free"
            OTHERMIRROR+=" | deb http://packages.siduction.org/fixes next         main contrib non-free"
            OTHERMIRROR+=" | deb http://$DEBIAN_MIRROR/              experimental main contrib non-free"
            ;;
        experimental)
            OTHERMIRROR="    deb http://packages.siduction.org/base  unstable     main"
            OTHERMIRROR+=" | deb http://packages.siduction.org/base  next         main"
            OTHERMIRROR+=" | deb http://packages.siduction.org/base  experimental main"
            OTHERMIRROR+=" | deb http://packages.siduction.org/extra unstable     main"
            OTHERMIRROR+=" | deb http://packages.siduction.org/extra next         main"
            OTHERMIRROR+=" | deb http://packages.siduction.org/extra experimental main"
            OTHERMIRROR+=" | deb http://packages.siduction.org/fixes unstable     main contrib non-free"
            OTHERMIRROR+=" | deb http://packages.siduction.org/fixes next         main contrib non-free"
            OTHERMIRROR+=" | deb http://packages.siduction.org/fixes experimental main contrib non-free"
            OTHERMIRROR+=" | deb http://$DEBIAN_MIRROR/              experimental main contrib non-free"
            ;;
        *)
            echo "Unknown distribution: ${DISTRI}"
            exit 1
            ;;
    esac
    ;;

  debian)
    case ${DISTRI} in
        jessie-backports)
            OTHERMIRROR+="   deb http://packages.siduction.org/lxqt jessie-backports main"
            ;;

        unstable)
            OTHERMIRROR="    deb http://$DEBIAN_MIRROR/ experimental main contrib non-free"
            OTHERMIRROR+=" | deb http://packages.siduction.org/lxqt unstable main"
            ;;
        experimental)
            OTHERMIRROR="    deb http://$DEBIAN_MIRROR/ experimental main contrib non-free"
            OTHERMIRROR+=" | deb http://packages.siduction.org/lxqt unstable main"
            OTHERMIRROR+=" | deb http://packages.siduction.org/lxqt experimental main"
            ;;
    esac
    ;;
esac


DEBOOTSTRAPOPTS=("${DEBOOTSTRAPOPTS[@]}" "--keyring=/usr/share/keyrings/debian-archive-keyring.gpg")

ALLOWUNTRUSTED=yes
