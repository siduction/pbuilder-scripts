#!/bin/bash
#
# packs
# (c) 2011 Alf Gaida <info@g-com.eu>
# 
export OLDGNUPGHOME=${GNUPGHOME}

export ARCH="amd64"

if [ -f ~/.pbuilderrc ]; then
    . ~/.pbuilderrc
fi

export GNUPGHOME=${OLDGNUPGHOME}

cat ~/.bashrc > /tmp/packs-script~
echo "cd ${BUILDRESULT}" >> /tmp/packs-script~
echo "SAVEPS=${PS1}" >> /tmp/packs-script~
echo "export PS1='\[\033[1;33m\]pbuilder-shell. Leave with exit:\w \$\[\033[0m\] '" >> /tmp/packs-script~
bash --rcfile /tmp/packs-script~


